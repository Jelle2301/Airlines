<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gilwe Airlines</title>
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
                <div>
                    <a asp-area="" asp-controller="Home" asp-action="Index"><img class="logo" src="~/images/Geluwe airlines blauw.jpg" alt="Gilwe Airlines Logo"/></a>
                    <a asp-area="" asp-controller="Plaats" asp-action="Index">Vluchten</a>
                    <a asp-area="" asp-controller="AanbiedBestemmingen" asp-action="Index">Alle bestemmingen</a>
                    <partial name="_LoginPartial" />
                </div>
        </nav>
    </header>
    <div>
        <main>
            @RenderBody()
        </main>
    </div>
    <footer>
        <div>
            &copy; 2025 - Airlines <!-- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>-->
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
