@model IEnumerable<Airlines.ViewModels.PlaatsVM>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="/css/Aanbiedbestemmingen.css" asp-append-version="true" />
<div class="blokPagina">
    <h1>Aanbod van bestemmingen:</h1>
    <p class="subtitelMaaltijd">Wij bieden vluchten aan voor deze bestemmingen.</p>
    <div class="alleMaaltijdenBlok">
        
        @foreach (var item in Model)
        {
            <div class="maaltijdKaart">
                <img src="/images/bestemmingen/@(item.Naam + ".jpg")" alt="@item.Naam" />
                <div class="inhoudVanMaaltijd">
                    <h4>@item.Naam</h4>
                </div>
            </div>
        }
        
    </div>
</div>